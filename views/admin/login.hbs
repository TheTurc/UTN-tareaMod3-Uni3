<div class="class">
  <div class="row" style="margin: 10% 25%">
    <div class="col">
      <form action="/admin/login" method="post">
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Usuario"
            name="usuario"
          />
        </div>
        <div class="form-group">
          <input
            style="margin-top: 15px;"
            type="password"
            class="form-control"
            placeholder="Password"
            name="password"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary"
          style="margin-top: 25px;"
        >Entrar</button>
      </form>

      {{#if error}}
        <p>Usuario o contrase√±a incorrecto</p>
      {{/if}}
    </div>
  </div>
</div>